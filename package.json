{
  "name": "rum-monorepo",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "engines": { "node": ">=18.18 || >=20" },
  "scripts": {
    "bootstrap": "pnpm i",
    "build": "pnpm -r --filter ./packages/* run build",
    "build:core": "pnpm -F @rum/rum-core build",
    "build:react": "pnpm -F @rum/rum-react build",
    "build:vue": "pnpm -F @rum/rum-vue build",
    "dev": "pnpm -r --filter ./packages/* run dev",
    "typecheck": "pnpm -r --filter ./packages/* run typecheck",
    "clean": "pnpm -r --filter ./packages/* run clean",
    "serve:vanilla": "http-server examples/vanilla -p 8080 -c-1",
    "prepack": "pnpm -w build",
    "ci": "pnpm i --frozen-lockfile && pnpm build && pnpm typecheck"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
